@model List<WeatherMvc.Models.WeatherData>

@{
    ViewBag.Title = "Weather";
    Layout = "_Layout";
}

<h5>Weather Data From WeatherForecast API</h5>
<p>Home / <strong>Weather</strong></p>

<table class="table table-hover">
    <tr>
        <th>Date</th>
        <th>Summary</th>
        <th>Temperature F</th>
        <th>Temperature C</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date.ToString("dd.mm.yyyy")</td>
            <td>@item.Summary</td>
            <td>@item.TemperatureF</td>
            <td>@item.TemperatureC</td>
        </tr>
    }
</table>